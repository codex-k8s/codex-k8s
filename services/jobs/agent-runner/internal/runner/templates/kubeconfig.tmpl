apiVersion: v1
kind: Config
clusters:
- cluster:
    certificate-authority: {{ .CACertificatePath }}
    server: https://{{ .ServiceHost }}:{{ .ServicePort }}
  name: {{ .ClusterName }}
contexts:
- context:
    cluster: {{ .ClusterName }}
    namespace: {{ .Namespace }}
    user: {{ .UserName }}
  name: {{ .ContextName }}
current-context: {{ .ContextName }}
users:
- name: {{ .UserName }}
  user:
    token: {{ .Token }}
